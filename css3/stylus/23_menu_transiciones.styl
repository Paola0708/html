
body
	background-color #00FAD4
nav 
	margin 20px auto
	padding 20px
	width 900px
	border 1px solid #FB0774
li
	background #7A6190 url(../imgs/instagram.jpg) no-repeat center top
	background-size 60%
	color #A6FC01
	display inline-block
	height 200px
	width 200px
	padding 10px
	text-align center
	transition all 1.5s ease-out
	
	span 
		background-color rgba(0,0,0, .5)
		font-size 1.4em
		display block
	    margin-top 154px
	    padding 10px
	    transition all 0.5s ease-in
li:hover
	background-color #FB06D6
	background-position center bottom
li:hover span
	transform translateY(-150px)

