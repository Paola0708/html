section
	background-color rgba(0, 0, 0, 0.5)
	height 500px
	width 650px
	margin 40px auto
	padding 20px
	border-radius 5px
	transition all 1s

section:hover
	transform rotate(180deg)
	transition all 1s
	
nav  
	background-color #A704FC
	height 80px
	margin 0px auto
	border-radius 5px
	transition all 1s
nav:hover
	transform rotate(180deg)
	transition all 1s

nav li 
	background-color #EF07F8
	display inline-block
	text-align center
	height 80px
	width 110px
	margin-left 40px
	border-radius 5px
	border-radius 20% 80% 20% 80%
	transition all 1s

nav li:hover
	transition all 1s
	border-radius 80% 20% 80% 20%
	
	
a
	text-decoration none

a span
	font-family Comic Sans MS
	display block
	text-align center
	background-color #0BF7F4
	margin-top 52px
	border-radius 80% 20% 80% 20%
	transition all 1s
	
li:hover
	background-color #05FB73
	transition all 1s
li:hover span
	transition all 1s
	transform translate(-50px)

article
	height 400px
	width 500px
	background-color #2339DD
	margin 20px auto
	border-radius 80% 20% 80% 20%
	transition all 1s

article:hover
	transition all 1s
	background-color #4176CE
	
article div
	background  #03F4FD url(../imgs/minion4.jpg) no-repeat center top
	height 300px
	width 300px
	border-radius 80% 20% 80% 20%
	position relative
	left 100px
	top 50px
	background-size contain
	transition all 1s ease-out
	
	
article div:hover
	-webkit-transform rotate(180deg) scale(1)
	transition all 1s ease-out
	background-color #1EE3AE


