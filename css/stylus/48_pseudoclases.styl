body
	background-color #0533F8
	color #A90AFB
	font 16px Arial
section
	background-color #03B3FC
	border 10px solid #A90AFB
	padding 20px
	margin 20px auto
	width 800px
/* Pseudo Clases para Enlaces*/
nav a:link,
nav a:visited
	background-color #A90AFB
	color #03B3FC
	display inline-block
	text-decoration none
	text-align center
	padding 20px 10px
	width 168px
nav a:hover
	background-color #fff
	border 2px solid #A90AFB
	color #03B3FC
nav a:active
	background-color #611DA0
	border 4px solid #611DA0
	color #fff
/*Pseudo Clase para Elementos de Formulario*/
&::-webkit-input-placeholder
	color white
input
	background-color #A90AFB
	border none
	color #fff
	font-size 1.2em
	display block 
	outline none
	padding 20px
	width 96%
input:focus
	background-color #03F4F7
	color #6C32E1
/* Insertar Contenido Antes-Despues*/
div.box::after,
div.box::before
	content,,
	position absolute
div.box
	background-color #9407F7
	height 200px
	position relative
	top 0px
	left 0px
	width 200px
div.box::after
	background-color #12D6ED
	height 100px
	top 0px
	left 100px
	width 100px
div.box::before
	background-color #12D6ED
	height 100px
	top 100px
	left 0px
	width 100px
/* Primera letra - Primera linea */
p::first-letter
	color #12F537
	font-weight bolder
	font-size 2em
p::first-line
	color #38FF03