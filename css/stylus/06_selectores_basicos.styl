/*selecotor universal*/
*
  font: 1em Arial
/*Selector de Tipo o Etiqueta*/
section
  background-color purple
  margin 20px auto
  padding 20px
  width 600px
/*Selector Descendente*/
section article h2
  font-size 1.4em
section article p
  text-align justify
/*Selector Clase*/
.claro
  background-color white
.oscuro
  background-color gray
.rojo
  color red
.blanco
  color white
.mayuscula
  text-transform uppercase
.minuscula
  text-transform lowercase
/*Selector ID */
#parr1
  padding 10px
#parr2
  color silver
/* Selector Combinado*/
section article h2.rojo
  font-weight bold
section article p#parr1
  color: gray

