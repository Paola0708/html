#header 
	margin -50px 600px 
	width 500px
	font-family Arial, Helvetica, sans-serif
			
ul, ol 
	list-style none
			
			
.nav > li 
	float left
			
			
.nav li a 
	background-color rgba(0,0,0,0.50)
	color #fff
	text-decoration none
	padding 10px 12px
	display block

			
.nav li a:hover 
	background-color #434343
			
			
.nav li ul 
	display none
	position absolute
	min-width 140px

			
.nav li:hover > ul 
	display block
			
			
.nav li ul li 
	position relative
			
.nav li ul li ul 
	right -140px
	top 0px

		
